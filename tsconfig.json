{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "ES2018",
      "dom"
    ],
    "module": "nodenext",
    "target": "ES2018",
    "alwaysStrict": false,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "inlineSources": true,
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": false,
    "strictNullChecks": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/index.ts"
  ]
}